<div class="d-flex align-items-stretch">
  <div class="banner align-self-center" style="background-image: url('<%= cl_image_path @cocktail.photo.key, crop: :fill %>');
">
    <h1 class="p-4"><%= @cocktail.name %></h1>
  </div>
  <div class="container p-5 align-self-center">
    <h2>Ingredients</h2>
    <ul class="list-group list-group-flush w-50">
      <% @doses.each do |dose| %>
        <li class="list-group-item d-flex justify-content-between align-items-center m-1 shadow-sm" style="border-radius: 20em; vertical-align: middle;">
          <p class="m-0"><%= dose.description %> <%= Ingredient.find(dose.ingredient_id).name %></p>
          <%= link_to "×", dose_path(dose.id),
            method: :delete,
            data: { confirm: "Are you sure?" }, class: 'text-decoration-none text-dark' %>
        </li>
      <% end %>
    </ul>
    <button type="button" class="btn btn-success rounded m-3 text-white" data-toggle="modal" data-target="#exampleModalCenter">
      + Add an ingredient
    </button>
    <%= render 'shared/new_dose_form' %>
  </div>

   <h1 class='m-4 mr-5'><%= link_to '╳', root_path, class: 'text-secondary' %></h1>
</div>




